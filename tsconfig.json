{
  "compilerOptions": {
    "target": "es5",  
    "module": "commonjs",        
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "bin",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },"exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts", "src/lib/schema/schemaParser.spects"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": [
        "jest",
        "node",
        "ts-node"
    ]
}
